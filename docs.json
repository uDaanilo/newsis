{
  "openapi": "3.0.0",
  "info": {
    "title": "newsis api",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "localhost"
    }
  ],
  "paths": {
    "/vehicles": {
      "get": {
        "tags": [
          "Vehicle"
        ],
        "summary": "Lista veículos cadastrados",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Vehicle"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/vehicles/{id}": {
      "get": {
        "summary": "Detalhes de um veículo",
        "tags": [
          "Vehicle"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Vehicle"
                }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/vehicles/create": {
      "post": {
        "summary": "Cria um veículo",
        "tags": [
          "Vehicle"
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["placa", "rastreado", "comprimento", "largura", "altura", "cubagem"],
                "properties": {
                  "placa": {
                    "type": "string"
                  },
                  "rastreado": {
                    "type": "boolean"
                  },
                  "comprimento": {
                    "type": "number"
                  },
                  "largura": {
                    "type": "number"
                  },
                  "altura": {
                    "type": "number"
                  },
                  "cubagem": {
                    "type": "number"
                  },
                  "fotos": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "binary"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Vehicle"
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/vehicles/update/{id}": {
      "put": {
        "summary": "Atualiza os dados de um veículo",
        "tags": [
          "Vehicle"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "placa": {
                    "type": "string"
                  },
                  "rastreado": {
                    "type": "boolean"
                  },
                  "comprimento": {
                    "type": "number"
                  },
                  "largura": {
                    "type": "number"
                  },
                  "altura": {
                    "type": "number"
                  },
                  "cubagem": {
                    "type": "number"
                  },
                  "fotos": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "binary"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/vehicles/delete/{id}": {
      "delete": {
        "summary": "Deleta um veículo",
        "tags": [
          "Vehicle"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/vehicles/{vehicleId}/pictures/{pictureId}": {
      "get": {
        "summary": "Exibe uma imagem específica de um veículo",
        "tags": [
          "Vehicle"
        ],
        "parameters": [
          {
            "name": "vehicleId",
            "in": "path",
            "required": true
          },
          {
            "name": "pictureId",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "image/*": {
              }
            }
          }
        }
      }
    },
    "/vehicles/{vehicleId}/pictures/create": {
      "post": {
        "summary": "Adiciona uma imagem ao veículo",
        "tags": [
          "Vehicle"
        ],
        "parameters": [
          {
            "name": "vehicleId",
            "in": "path",
            "required": true
          },
          {
            "name": "pictureId",
            "in": "path",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["foto"],
                "properties": {
                  "foto": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Vehicle"
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericError"
                }
              }
            }
          }
        }
      }
    },
    "/vehicles/{vehicleId}/pictures/update/{pictureId}": {
      "put": {
        "summary": "Atualiza uma imagem de um veículo",
        "tags": [
          "Vehicle"
        ],
        "parameters": [
          {
            "name": "vehicleId",
            "in": "path",
            "required": true
          },
          {
            "name": "pictureId",
            "in": "path",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["foto"],
                "properties": {
                  "foto": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Vehicle"
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericError"
                }
              }
            }
          }
        }
      }
    },
    "/vehicles/{vehicleId}/pictures/delete/{pictureId}": {
      "delete": {
        "summary": "Exclui a imagem de um veículo",
        "tags": [
          "Vehicle"
        ],
        "parameters": [
          {
            "name": "vehicleId",
            "in": "path",
            "required": true
          },
          {
            "name": "pictureId",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Vehicle": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "placa": {
            "type": "string"
          },
          "rastreado": {
            "type": "boolean"
          },
          "comprimento": {
            "type": "number"
          },
          "largura": {
            "type": "number"
          },
          "altura": {
            "type": "number"
          },
          "cubagem": {
            "type": "number"
          },
          "fotos": {
            "type": "array",
            "items":{
              "type": "object",
              "properties": {
                "id": {
                  "type": "number"
                },
                "source": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "ValidationError": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "number"
          },
          "error": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "validation": {
            "type": "object",
            "properties": {
              "body": {
                "type": "object",
                "properties": {
                  "source": {
                    "type": "string"
                  },
                  "keys": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "message": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "GenericError": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          }
        }
      }
    }
  }
}